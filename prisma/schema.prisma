  uid       String   @unique @default(uuid())
  cid       String   @default(cuid())
  gubun     String   @default("") @map("gubun")
  title     String   @default("") @map("title")
  url       String   @default("") @map("url")
  deviceType   String   @default("all") //  all | pc | mobile
  sortOrder    Int            @default(0) @map("sort_order")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at")
  isUse     Boolean  @default(true) @map("is_use")
  isVisible Boolean  @default(true) @map("is_visible")

  BannerFile BannerFile[]

  @@map("ec_banner")
}

model BannerFile  {
  idx          Int      @id @default(autoincrement())
  uid          String   @unique @default(uuid())
  bannerId     String
  name         String
  url          String   @db.VarChar(255)
  ext          String   @db.VarChar(10)
  originalName String
  size         Int
  type         String   @db.VarChar(50)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  Banner       Banner   @relation(fields: [bannerId], references: [uid], onDelete: Cascade)

  @@index([bannerId], map: "bannerId_index")
  @@map("ec_banner_files")
}

model Config {
  idx         Int     @id @default(autoincrement())
  uid         String  @unique @default(uuid())
  cid         String  @default(cuid())
  CNFname     String  @db.VarChar(255)
  CNFvalue    String? @db.LongText
  CNFvalue_en String? @db.LongText
  CNFvalue_ja String? @db.LongText
  CNFvalue_zh String? @db.LongText
  sortOrder    Int            @default(0) @map("sort_order")

  @@map("ec_config")
}

model Setup {
  idx            Int      @id @default(autoincrement())
  uid            String   @unique @default(uuid())
  isDefault      Boolean  @default(false) @map("is_default") // 기본 설정 여부
  snsFacebook    String?  @map("sns_facebook") @db.VarChar(255) // 페이스북
  snsTwitter     String?  @map("sns_twitter") @db.VarChar(255)  // 트위터
  snsInstagram   String?  @map("sns_instagram") @db.VarChar(255) // 인스타그램
  snsYoutube     String?  @map("sns_youtube") @db.VarChar(255) // 유튜브
  snsLinkedin    String?  @map("sns_linkedin") @db.VarChar(255) // 링크드인
  snsKakao       String?  @map("sns_kakao") @db.VarChar(255)    // 카카오 채널
  snsNaver       String?  @map("sns_naver") @db.VarChar(255)    // 네이버 블로그
  idFilter       String?  @map("id_filter") @db.MediumText // 금지 아이디 목록
  wordFilter     String?  @map("word_filter") @db.MediumText // 단어 필터링
  possibleIp     String?  @map("possible_ip") @db.MediumText // 접근 가능 IP
  interceptIp    String?  @map("intercept_ip") @db.MediumText // 접근 차단 IP
  aosVersion     String?  @map("aos_version") @db.VarChar(45) // 안드로이드 앱 버전
  aosUpdate      String?  @map("aos_update") @db.VarChar(45) // 앱 업데이트 (1:선택, 2:강제)
  aosStoreApp    String?  @map("aos_store_app") @db.VarChar(255) // 구글 플레이스토어 링크
  aosStoreWeb    String?  @map("aos_store_web") @db.VarChar(255) // 안드로이드 웹스토어 링크
